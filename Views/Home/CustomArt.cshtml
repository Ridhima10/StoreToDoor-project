@{
    ViewData["Title"] = "Custom Art";
}
@{
    ViewBag.HideFooter = true;
}
<section class="container-fluid">
    <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-12 col-12 login-section">
            <img src="~/img/painting1profile.jpg" class="img-fluid" alt="" style="height:100vh;">
        </div>
        <div class="col-lg-6 col-md-12 col-sm-12 col-12 pt-5">
            <div class="container pt-4 text-center">
                <a asp-controller="home" asp-action="index" class="navbar-brand font1 text-dark fw-bold  heading1 text-wrap">
                    <img src="~/img/logo.png" class="me-3 mb-2" style="width: 3rem; height: 3rem;" alt="">Request For
                    Custom Art
                </a>
            </div>
            <div class="container d-flex justify-content-center login-width" >
                <div class="row pt-2 ms-3">
                  
                    <form method="post">
                        <div class="row py-2 my-3">

                            <div class="mb-3">
                                <input type="hidden" name="ArtistId" value="@(ViewBag.ArtistId) ">
                                <label for="exampleFormControlTextarea1" class="form-label mb-3" >
                                    Describe the artwork you want to buy including the size , style or any
                                    content idea.
                                </label>
                                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"
                                    name="Description" placeholder="Mention your email And WhatsApp Number with description.."></textarea>
                            </div>
                        </div>
                        <div class="d-grid gap-2 col-sm-6 col-12 ms-auto me-auto pt-3">
                            <button type="submit" class=" btn all-buttons btn-primary rounded-pill
                                shadow-none">Send</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
